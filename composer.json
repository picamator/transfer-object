{
  "name": "picamator/transfer-object",
  "description": "Transfer Object based on property Hooks, includes generator by yml definition.",
  "keywords": ["dev", "code generator", "transfer object"],
  "license": "MIT",
  "authors": [
    {
      "name": "Sergii Pryz"
    }
  ],
  "support": {
    "issues": "https://github.com/picamator/transfer-object/issues"
  },
  "bin": [
    "generate-transfer"
  ],
  "autoload": {
    "psr-4": {
      "Picamator\\TransferObject\\": "src/"
    },
    "exclude-from-classmap": ["/tests/", "/doc/"]
  },
  "autoload-dev": {
    "psr-4": {
      "Picamator\\Tests\\Unit\\TransferObject\\": "tests/unit/",
      "Picamator\\Tests\\Integration\\TransferObject\\": "tests/integration/",
      "Picamator\\Doc\\TransferObject\\": "doc/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.4",
    "symfony/finder": "^7.0",
    "symfony/yaml": "^7.0",
    "symfony/filesystem": "^7.0",
    "symfony/console": "^7.0",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "captainhook/captainhook": "^5.24",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^11.5",
    "squizlabs/php_codesniffer": "^3.11"
  },
  "archive": {
    "exclude": [
      "docker",
      "tests",
      "doc",
      ".editorconfig",
      ".gitattributes",
      ".env",
      ".gitignore",
      "captainhook.json",
      "docker-compose.yml",
      "phpcs.xml",
      "phpstan.neon",
      "phpunit.xml",
      "README.md"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "phpunit": "./vendor/bin/phpunit",
    "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon",
    "generate-transfer": "php ./generate-transfer",
    "captainhook": "./vendor/bin/captainhook",
    "phpcs": "./vendor/bin/phpcs"
  },
  "scripts-descriptions": {
    "phpunit": "Run PHPUnit tests.",
    "phpstan": "Run PHPStan - PHP Static Analysis Tool.",
    "generate-transfer": "Run Transfer Object Generator.",
    "captainhook": "Run CaptanHooks.",
    "phpcs": "Run PHP CodeSniffer."
  }
}
