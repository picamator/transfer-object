{
  "name": "picamator/transfer-object",
  "description": "Transfer Object based on property Hooks, includes generator by yml definition.",
  "keywords": ["Transfer Object", "Code Generator"],
  "license": "MIT",
  "authors": [
    {
      "name": "Sergii Pryz"
    }
  ],
  "support": {
    "issues": "https://github.com/picamator/transfer-object/issues"
  },
  "autoload": {
    "psr-4": {
      "Picamator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Picamator\\Tests\\": "tests/",
      "Picamator\\TransferObject\\": "doc/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.4",
    "ext-mbstring": "*",
    "symfony/finder": "^7.0",
    "symfony/yaml": "^7.0",
    "symfony/filesystem": "^7.0",
    "symfony/console": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.0",
    "phpmd/phpmd": "^2.15"
  },
  "archive": {
    "exclude": ["docker", "docker-compose.yml", "tests"]
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon",
    "phpmd": "./vendor/bin/phpmd",
    "generate-transfer": "php ./generate-transfer.php"
  },
  "scripts-descriptions": {
    "test": "Run PHPUnit tests.",
    "phpstan": "Run PHPStan - PHP Static Analysis Tool.",
    "phpmd": "Run PHPMD - PHP Mess Detector.",
    "generate-transfer": "Run Transfer Object Generator."
  }
}
