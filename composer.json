{
  "name": "picamator/transfer-object",
  "description": "Transfer Object based on property Hooks, includes generator by yml definition.",
  "keywords": ["dev", "code generator", "transfer object"],
  "license": "MIT",
  "authors": [
    {
      "name": "Sergii Pryz"
    }
  ],
  "support": {
    "issues": "https://github.com/picamator/transfer-object/issues"
  },
  "bin": [
    "generate-transfer"
  ],
  "autoload": {
    "psr-4": {
      "Picamator\\": "src/"
    },
    "exclude-from-classmap": ["/tests/", "/doc/"]
  },
  "autoload-dev": {
    "psr-4": {
      "Picamator\\Tests\\Unit\\": "tests/Unit/",
      "Picamator\\Tests\\Integration\\": "tests/Integration/",
      "Picamator\\TransferObject\\": "doc/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.4",
    "ext-mbstring": "*",
    "symfony/finder": "^7.0",
    "symfony/yaml": "^7.0",
    "symfony/filesystem": "^7.0",
    "symfony/console": "^7.0",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.0"
  },
  "archive": {
    "exclude": ["docker", "docker-compose.yml", "tests"]
  },
  "scripts": {
    "phpunit": "./vendor/bin/phpunit",
    "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon",
    "generate-transfer": "php ./generate-transfer"
  },
  "scripts-descriptions": {
    "phpunit": "Run PHPUnit tests.",
    "phpstan": "Run PHPStan - PHP Static Analysis Tool.",
    "generate-transfer": "Run Transfer Object Generator."
  }
}
