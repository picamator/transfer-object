<?xml version="1.0"?>
<ruleset name="TransferObject">
    <description>
        Transfer Object Generator Coding Standard.
    </description>
    <arg name="cache" value=".cs-check.json"/>
    <arg name="parallel" value="5"/>

    <config name="php_version" value="80420"/>

    <rule ref="PSR12">
        <!-- Property hooks are not recognized -->
        <exclude name="PSR2.Classes.PropertyDeclaration"/>
    </rule>

    <file>src</file>
    <file>tests</file>
    <file>doc</file>

    <exclude-pattern>*/tests/*/data/*</exclude-pattern>

</ruleset>
