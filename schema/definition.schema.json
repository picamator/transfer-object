{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Transfer Object definition file",
    "description": "Definition file can include one or more Transfer Object definitions.",
    "type": "object",
    "patternProperties": {
        ".*": {
            "type": "object",
            "description": "Transfer Object name.",
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "description": "Property name.",
                    "properties": {
                        "type": {
                            "type": ["string", "boolean"],
                            "description": "PHP built-in type or Transfer Object name without Transfer suffix or the full class path, optionally with alias.",
                            "anyOf": [
                                "bool",
                                "int",
                                "float",
                                "string",
                                "array",
                                "array<bool>",
                                "array<int,bool>",
                                "array<string,bool>",
                                "array<int>",
                                "array<int,int>",
                                "array<string,int>",
                                "array<float>",
                                "array<int,float>",
                                "array<string,float>",
                                "array<string>",
                                "array<int,string>",
                                "array<string,string>",
                                "array<mixed>",
                                "array<int,mixed>",
                                "array<string,mixed>",
                                "array<string,array<int,string>>",
                                "ArrayObject",
                                "ArrayObject<bool>",
                                "ArrayObject<int,bool>",
                                "ArrayObject<string,bool>",
                                "ArrayObject<int>",
                                "ArrayObject<int,int>",
                                "ArrayObject<string,int>",
                                "ArrayObject<float>",
                                "ArrayObject<int,float>",
                                "ArrayObject<string,float>",
                                "ArrayObject<string>",
                                "ArrayObject<int,string>",
                                "ArrayObject<string,string>",
                                "ArrayObject<mixed>",
                                "ArrayObject<int,mixed>",
                                "ArrayObject<string,mixed>",
                                "ArrayObject<string,array<int,string>>",
                                {
                                    "pattern": ".*"
                                }
                            ]
                        },
                        "collectionType": {
                            "type": "string",
                            "description": "Includes the Transfer Object name without Transfer suffix or the full class path, optionally with alias."
                        },
                        "enumType": {
                            "type": "string",
                            "description": "Includes the fully qualified Enum name with namespace, optionally with alias."
                        },
                        "dateTimeType": {
                            "type": "string",
                            "description": "Includes DateTimeImmutable or DateTime or any of full sub-class path, optionally with alias.",
                            "anyOf": [
                                "DateTimeImmutable",
                                "DateTime",
                                {
                                    "pattern": ".*"
                                }
                            ]
                        },
                        "numberType": {
                            "type": "string",
                            "description": "Includes BcMath\\Number.",
                            "anyOf": [
                                "BcMath\\Number"
                            ]
                        },
                        "required": {
                            "type": "null",
                            "description": "Marks the property as not nullable."
                        },
                        "protected": {
                            "type": "null",
                            "description": "Marks the property as having asymmetric protected(set) visibility."
                        },
                        "attributes": {
                            "description": "List of attribute strings to be attached to the property (fully qualified attribute invocation).",
                            "type": "array",
                            "items": { "type": "string" }
                        }
                    },
                    "oneOf": [
                        {
                            "required": ["type"]
                        }, {
                            "required": ["collectionType"]
                        }, {
                            "required": ["enumType"]
                        }, {
                            "required": ["dateTimeType"]
                        }, {
                            "required": ["numberType"]
                        }
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
